generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Job {
  id              String   @id @default(uuid())
  status          String   // queued, completed, failed
  originalName    String?
  preset          String?  // hr, healthcare, finance
  fileType        String?  // csv or json
  inputSize       Int?
  outputSize      Int?
  createdAt       DateTime @default(now())
  startedAt       DateTime?
  finishedAt      DateTime?
  durationMs      Int?
  errorMessage    String?
  downloadUrl     String?
  
  @@map("jobs")
}

model Metrics {
  id                 String   @id @default("singleton")
  totalJobs          Int      @default(0)
  successfulJobs     Int      @default(0) 
  failedJobs         Int      @default(0)
  totalProcessingMs  BigInt   @default(0)
  updatedAt          DateTime @updatedAt
  
  @@map("metrics")
}
